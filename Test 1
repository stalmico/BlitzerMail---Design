    <script>
        // Toggle animation classes on load
        document.querySelectorAll('.slide-in').forEach((el, i) => {
            setTimeout(() => {
                el.style.opacity = '1';
                el.style.transform = 'translateY(0)';
            }, 150 * (i + 1));
        });
        
        // Email action handlers
        document.querySelectorAll('.snooze-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                const card = this.closest('.email-card');
                card.style.transform = 'translateY(10px)';
                card.style.opacity = '0';
                setTimeout(() => {
                    card.style.display = 'none';
                    // In real app, would move to snoozed state
                }, 300);
            });
        });
        
        // Show confirmation on action
        document.querySelectorAll('.email-card').forEach(card => {
            const replyBtn = card.querySelector('button.bg-focus-blue');
            replyBtn.addEventListener('click', function() {
                const iconContainer = document.createElement('div');
                iconContainer.innerHTML = `
                    <svg width="40" height="40" viewBox="0 0 24 24" class="text-action-teal">
                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                        <path class="check-circle" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M6 13l4 4 8-8"/>
                    </svg>
                `;
                
                const originalHtml = card.innerHTML;
                card.innerHTML = '';
                card.classList.add('flex', 'items-center', 'justify-center', 'py-8');
                card.appendChild(iconContainer);
                
                setTimeout(() => {
                    card.style.opacity = '0';
                    setTimeout(() => card.remove(), 300);
                }, 1500);
            });
        });
    </script>
